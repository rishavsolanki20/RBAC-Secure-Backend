{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "moduleResolution": "node"
  },
  
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
